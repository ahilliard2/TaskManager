@model TaskManager.Models.User

@{
    ViewBag.Title = "Task Manager Login";
}
@*<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>*@

<h2>Task Manager</h2>
@using (@Html.BeginForm(null, null, FormMethod.Post, new { @class = "login-form" }))
{
    @Html.AntiForgeryToken()

    <div class="login-container">
        <section class="login" id="login">
            <header>
                <h2>Login</h2>               
            </header>     
            
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.UserName, 
                   new { @class = "login-input", placeholder = "user name", @data_val = "true", @data_val_required = "Username is a required field" })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.Password, new { @class = "login-input", placeholder = "Password" })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>
      
            <div class="text-danger">@ViewBag.Message</div>
            
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Sign In" class="login-button" />
                </div>
            </div>           
         </section>    
    </div>
}